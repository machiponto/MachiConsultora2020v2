@model IEnumerable<BI.ClsBusqueda>

@{
    ViewBag.Title = "Listado de Bsuquedas";
}

<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-8">
            <div class="page-header">

                @if (@ViewBag.mostrarMensaje == "OK")
                {
                    @*MENSAJE DE ALERTA AZUL*@
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        @ViewBag.mensaje
                    </div>
                }
                else if (@ViewBag.mostrarMensaje == "ERROR")
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        @ViewBag.mensaje
                    </div>
                }
                else { }


                <h1 id="tables">@Session["ListadoBusquedasVigentes"]</h1>
            </div>
            <div class="bs-example text-center">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">
                                @Session["FechaPublicacion"]
                            </th>
                            <th class="text-center">
                                @Session["Descripcion"]
                            </th>
                            <th class="text-center">
                                @Session["Referencia"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaPublicacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Referencia)
                                </td>
                                <td>
                                    @*<ul class="nav navbar-nav navbar-right">
                                        <li class="dropdown">
                                            <a class="dropdown-toggle" data-toggle="dropdown">Opciones <b class="caret"></b></a>
                                            <ul class="dropdown-menu">
                                                <li>@Html.ActionLink("Generar", "detalleProductoEnProduccion", new { pCodigo = item.codigo })</li>
                                                <li>@Html.ActionLink("Bajar Producto", "darBajaProducto", new { pCodigo = item.codigo })</li>
                                            </ul>
                                        </li>
                                    </ul>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
