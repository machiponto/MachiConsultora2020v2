}

<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-8">

            <h2>@Session["Busqueda"]</h2>

            <form class="navbar-form navbar-right" role="search" action="/Secciones/buscarBusquedas" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Session["Buscar"]" id="pValor" name="pValor">
                </div>
                <button type="submit" class="btn btn-default">@Session["Buscar"]</button>
            </form>

