                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Referencia)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>

                            @*<td>
                                @Html.DisplayFor(modelItem => item.FechaPublicacion)
                            </td>*@


                            <td>
                                @Html.DisplayFor(modelitem => item.FechaPublicacion.Day)/@Html.DisplayFor(modelitem => item.FechaPublicacion.Month)/@Html.DisplayFor(modelitem => item.FechaPublicacion.Year)
