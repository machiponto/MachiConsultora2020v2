            <div class="form-group">
                <input type="text" class="form-control"  @Html.DisplayFor(modelItem => item.Referencia) placeholder="@Session["Buscar"]" id="pValor" name="pValor">
            </div>
            <button type="submit" class="btn btn-default">@Session["Buscar"]</button>
        </form>*@

                                @*<a href="/Postulante/CandidatosporBusqueda/@item.Referencia" id="@item.Referencia" class="btn btn-primary" >Postulantes</a>*@

                                @*<li>@Html.ActionLink("Postulante/CandidatosporBusqueda", "CandidatosporBusqueda", new { pValor = item.Referencia })</li>*@



