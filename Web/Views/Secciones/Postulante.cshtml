@model IEnumerable<BI.ClsBusqueda>

@{
    ViewBag.Title = "Postulante";
}

<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-8">

            <h2>@Session["Busqueda"]</h2>

            <form class="navbar-form navbar-right" role="search" action="/Secciones/buscarBusquedas" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Session["Buscar"]" id="pValor" name="pValor">
                </div>
                <button type="submit" class="btn btn-default">@Session["Buscar"]</button>
            </form>

            <div class="bs-example text-left">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            @*<th class="text-center">
                                   Id
                                </th>*@

                            <th class="text-center">
                                @Session["Referencia"]
                            </th>

                            <th class="text-center">
                                @Session["Descripcion"]
                            </th>
                            <th class="text-center">
                                @Session["FechaPublicacion"]
                            </th>
                            <th class="text-center">
                                @*<a href="~/Views/Postulante/evaluarPostulantes.cshtml" class="btn btn-primary">Postulantes</a>*@

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Referencia)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>

                                @*<td>
                                        @Html.DisplayFor(modelItem => item.FechaPublicacion)
                                    </td>*@


                                <td>
                                    @Html.DisplayFor(modelitem => item.FechaPublicacion.Day)/@Html.DisplayFor(modelitem => item.FechaPublicacion.Month)/@Html.DisplayFor(modelitem => item.FechaPublicacion.Year)
                                </td>

                                <td>
                                    @*<a href="/Secciones/Postulantes/@Html.DisplayFor(modelItem => item.Referencia)" class="btn btn-primary">Postulantes</a>*@
                                    @*<a href="/Postulante/CandidatosporBusqueda/@Html.DisplayFor(modelItem => item.Referencia)" class="btn btn-primary">Postulantes</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
