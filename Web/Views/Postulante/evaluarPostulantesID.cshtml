@model IEnumerable<BI.ClsBusqueda>

@{
    //ViewBag.Title = "evaluarPostulantes";
    <h2>Postulantes por Búsqueda</h2>

       }

<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-8">

            <h2>@Session["evaluarPostulantes"]</h2>

            <form class="navbar-form navbar-right" role="search" action="/Postulante/buscarPostulantes" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Session["Buscar"]" id="pValor" name="pValor">
                </div>
                <button type="submit" class="btn btn-default">@Session["Buscar"]</button>
            </form>

            <div class="bs-example text-left">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            @*<th class="text-center">
                                Id
                             </th>*@

                            <th class="text-center">
                                @Session["Referencia"]
                            </th>

                            <th class="text-center">
                                @Session["Descripcion"]
                            </th>
                            <th class="text-center">
                                @Session["FechaPublicacion"]
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Referencia)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>

                            @*<td>
                                @Html.DisplayFor(modelItem => item.FechaPublicacion)
                            </td>*@


                            <td>
                                @Html.DisplayFor(modelitem => item.FechaPublicacion.Day)/@Html.DisplayFor(modelitem => item.FechaPublicacion.Month)/@Html.DisplayFor(modelitem => item.FechaPublicacion.Year)
                            </td>


                        </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
