@model Web.Models.LoginModel

@{
    ViewBag.Title = "Ingresar";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

   <div class="container">

            <div class="col-md-9">
                  
    <div class="bs-docs-section">

        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">

                @*MENSAJE DE ALERTA ERROR Y OK*@
                @if (@ViewBag.mostrarMensaje == "OK")
                {           
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        @ViewBag.mensaje
                    </div>   
                           }
                else if (@ViewBag.mostrarMensaje == "ERROR")
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        @ViewBag.mensaje
                    </div>
                           }
                else
                {

                }
              <h1 id="tables">@Session["ingresar"]</h1>
            </div>

              <p>@Session["Login"]</p>
            <div class="bs-example">
              <table class="table table-striped table-bordered table-hover">
                
                <tbody>
                  <tr>
                    <td>
                         @Session["Usuario"]
                    </td>
                      <td>
                @Html.EditorFor(model => model.usr)
                @Html.ValidationMessageFor(model => model.usr)
                    </td>
                  </tr>

                  <tr>
                    <td>
                         @Session["Contrasena"]
                    </td>
                      <td>
                @Html.EditorFor(model => model.password)
                @Html.ValidationMessageFor(model => model.password)
                    </td>
                  </tr>
                </tbody>
            
              </table>

                <input type="hidden" name="SessionID" value="@Session.SessionID" />
                  <p><button type="submit" class="btn btn-primary">@Session["Ingresar"]</button></p>
    
                  <p>
                      @Html.ActionLink("Regístrese", "altaCliente") si no tiene ninguna cuenta.
                      @*@Html.ActionLink("Regìstrese", "altaPostulante") si ni tiene ninguna cuenta.*@
                  </p>
                </div>
              </div>
            </div>
        </div>
                </div>
       </div>
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

