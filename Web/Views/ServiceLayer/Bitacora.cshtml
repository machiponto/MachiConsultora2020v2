@model IEnumerable<SL.Bitacora.Bitacora>

@{
    ViewBag.Title = "Bitacora";
}

<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-8">

            <h2>@Session["Bitacora"]</h2>

            <form class="navbar-form navbar-right" role="search" action="/ServiceLayer/buscarEventos" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Session["Buscar"]" id="pValor" name="pValor">
                </div>
                <button type="submit" class="btn btn-default">@Session["Buscar"]</button>
            </form>

            <div class="bs-example text-center">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Id
                            </th>
                            <th class="text-center">
                                @Session["Modulo"]
                            </th>
                            <th class="text-center">
                                @Session["Tipo"]
                            </th>
                            <th class="text-center">
                                @Session["Fecha"]
                            </th>
                            <th class="text-center">
                                @Session["Detalle"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idBitacora)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.modulo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tipo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.fecha.Day)/@Html.DisplayFor(modelitem => item.fecha.Month)/@Html.DisplayFor(modelitem => item.fecha.Year)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.detalle)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


